{
  "name": "continuous-carousel",
  "version": "0.3.0",
  "description": "Timed continuous carousel that uses vanilla JavaScript & CSS animations.",
  "main": "dist/continuous-carousel.js",
  "module": "dist/continuous-carousel.esm.js",
  "exports": {
    ".": {
      "import": "./dist/continuous-carousel.esm.js",
      "require": "./dist/continuous-carousel.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/jonchretien/continuous-carousel.git"
  },
  "homepage": "https://github.com/jonchretien/continuous-carousel",
  "scripts": {
    "build": "npm run build:js && npm run copy && npm run build:css && npm run copy:demo",
    "build:js": "rolldown -c",
    "build:css": "postcss src/continuous-carousel.css -o dist/continuous-carousel.min.css",
    "copy": "./bin/copy-files.sh",
    "copy:demo": "cp -r dist/* demo/dist/",
    "demo": "npm run build && npx http-server -p 8080 -o /demo",
    "dev": "rolldown -c -w",
    "dist": "npm run lint && npm run test && npm run copy && npm run minify-js && npm run minify-css",
    "lint": "eslint src/**/*.js",
    "minify-css": "postcss src/continuous-carousel.css -o dist/continuous-carousel.min.css",
    "minify-js": "terser dist/continuous-carousel.js --mangle --compress --comments -o dist/continuous-carousel.min.js",
    "pretest": "npm run build",
    "test": "vitest run"
  },
  "author": "Jon Chretien",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/dom": "^10.0.0",
    "cssnano": "^5.1.14",
    "eslint": "^7.11.0",
    "jsdom": "^25.0.0",
    "postcss-cli": "^8.1.0",
    "rolldown": "^0.15.1",
    "terser": "^5.3.7",
    "vitest": "^3.0.0"
  }
}
