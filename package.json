{
  "name": "continuous-carousel",
  "version": "1.1.0",
  "description": "Timed continuous carousel that uses vanilla JavaScript & CSS animations.",
  "main": "dist/continuous-carousel.js",
  "module": "dist/continuous-carousel.esm.js",
  "types": "./dist/ContinuousCarousel.d.ts",
  "sideEffects": [
    "*.css"
  ],
  "files": [
    "dist/",
    "src/"
  ],
  "keywords": [
    "carousel",
    "slider",
    "vanilla-js",
    "css-animations",
    "continuous",
    "a11y",
    "typescript"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/ContinuousCarousel.d.ts",
        "default": "./dist/continuous-carousel.esm.js"
      },
      "require": {
        "types": "./dist/ContinuousCarousel.d.ts",
        "default": "./dist/continuous-carousel.js"
      }
    },
    "./css": "./dist/continuous-carousel.min.css"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/jonchretien/continuous-carousel.git"
  },
  "homepage": "https://github.com/jonchretien/continuous-carousel",
  "bugs": {
    "url": "https://github.com/jonchretien/continuous-carousel/issues"
  },
  "engines": {
    "node": "^20.19.0 || ^22.13.0 || >=24"
  },
  "scripts": {
    "build": "npm run build:js && npm run build:types && npm run copy && npm run build:css",
    "build:js": "node bin/build-js.mjs",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:css": "postcss src/continuous-carousel.css -o dist/continuous-carousel.min.css",
    "copy": "./bin/copy-files.sh",
    "dev": "rolldown -c -w",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "postversion": "node bin/post-version.mjs",
    "dist": "npm run lint && npm run test && npm run copy && npm run build",
    "lint": "eslint 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "pretest": "npm run build",
    "test": "vitest run"
  },
  "author": "Jon Chretien",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-typescript": "^7.28.5",
    "@eslint/js": "^10.0.1",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/dom": "^10.0.0",
    "cssnano": "^7.1.2",
    "eslint": "^10.0.1",
    "globals": "^17.3.0",
    "jsdom": "^28.1.0",
    "postcss-cli": "^11.0.1",
    "rolldown": "^0.15.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18"
  }
}
