{
  "name": "infinite-carousel",
  "version": "0.1.0",
  "author": "Jon Chretien",
  "description": "Timed infinite carousel that uses vanilla JavaScript & CSS animations.",
  "main": "js/infinite-carousel.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:debug && npm run build:min",
    "build:debug": "browserify src/js/entry.js -t -p [bannerify --file .banner ] -o dist/infinite-carousel.pkgd.js",
    "build:min": "uglifyjs dist/infinite-carousel.pkgd.js --mangle --compress --screw-ie8 --comments -o dist/infinite-carousel.pkgd.min.js",
    "build:watch": "watchify src/js/infinite-carousel.js -t -o dist/infinite-carousel.pkgd.js -v"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/jonchretien/infinite-carousel.git"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.17",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "bannerify": "^1.0.1",
    "browserify": "^12.0.1",
    "clean-css": "~3.1.5",
    "jshint": "~2.6.3",
    "qunitjs": "~1.17.1",
    "uglify-js": "~2.4.17",
    "watchify": "^3.6.1"
  }
}
